<h1>All tasks:</h1>
<ol>
  <% @tasks.each do |t| %>
  <li>
    <% if t.completed  %>
      <%= '[X]' %>
      <% else %>
      <%= '[_]' %>
      <% end %>
    <%= link_to t.title, task_path(t) %>

    <%= link_to 'Delete', task_path(t), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>

    </%>
  </li>
  <% end %>
</ol>

<p>
  <%= link_to "Add a new task", new_task_path %>
</p>
